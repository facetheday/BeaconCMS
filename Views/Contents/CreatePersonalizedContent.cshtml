@model CMS.Models.ContentGroupViewModel

@{
    ViewBag.Title = "Create";
}
<h2>Add content URL</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>
        for <b>@Html.DisplayFor(modelItem => Model.Content.Name)</b>
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ContentID)

    <div class="form-group">
        @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Client group", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.SelectedGroupID, Model.Groups, htmlAttributes: new { @class = "control-label col-md-5" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Protection period (minutes)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProtectionPeriod, new { htmlAttributes = new { @class = "form-control" } }) <p style="padding-left:inherit">( 0 = no protection period )</p>
            @Html.ValidationMessageFor(model => model.ProtectionPeriod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="CreatePersonalizedContent" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back", "Details", new { id = Model.ContentID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
