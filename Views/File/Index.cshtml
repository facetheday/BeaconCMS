@model IEnumerable<CMS.Models.BlobContent>

@{
    ViewBag.Title = "Index";
}

<h2>File management</h2>


@using (Html.BeginForm("Upload", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table style="width:450px; height:100px; margin-bottom:2em">
        <tr>
            <td>Content name:</td>
            <td>@Html.TextBox("contentName")</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="file" name="file" style="margin-bottom:1em" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" id="Submit" value="Upload" /></td>
        </tr>
    </table>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
</table>